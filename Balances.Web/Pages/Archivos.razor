    <!---------------------------------------------------------------->
    <div class="container mt-5">
        <h2 class="text-center" style="margin-bottom: 20px; color: #0375bc; font-weight: bold;">
            Archivos
        </h2>
        <div class="row">
            <!-- Tarjeta: Enviar Archivos -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header" style="color: #0375bc; font-weight: bold; text-align: center;">
                        Enviar Archivos
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="tipoArchivo">Tipo de Archivo</label>
                                <select class="form-control" id="tipoArchivo">
                                    <option value="Declaraciones de Accionista">Declaraciones de Accionista</option>
                                    <option value="Estatuto">Estatuto</option>
                                </select>
                            </div>
                        </form>
                        <div class="card-text text-center">
                            <h5>Arrastre los archivos aquí o haga clic para subir</h5>
                            <p>Los archivos deben tener un máximo de 20MB.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarjeta: Archivo Recibido -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header" style="color: #0375bc; font-weight: bold; text-align: center;">
                        Archivo Recibido
                    </div>
                    <ul class="list-group list-group-flush" id="archivosRecibidos">
                        <!-- Los archivos recibidos se agregarán aquí -->
                    </ul>
                </div>
            </div>
        </div>
    </div>


</body>

