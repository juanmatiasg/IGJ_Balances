                                            <td>@archivo.Hash</td>
                                            <td>@archivo.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                            <td>@conversionesDeArchivos(archivo.Tamaño)</td>
                                            <td>
                                                <button type="button" class="btn btn-danger" @onclick="() => deleteArchivo(archivo)">Eliminar</button>
