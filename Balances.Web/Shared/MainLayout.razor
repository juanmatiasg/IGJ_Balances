@using System.Reflection;
@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Búsqueda de Entidad</title>
    <link href="~/css/app.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap/background.css" rel="stylesheet">
    <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
    <link href="_content/Blazorise.Bootstrap/blazorise.bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
    <script src="_content/CurrieTechnologies.Razor.SweetAlert2/sweetAlert2.min.js"></script>


</head>

<body style="font-family:Montserrat">
    <RadzenNotification />
    <div class="d-flex flex-column " style="min-height:100vh;">


        <div class=" d-flex align-items-start position-absolute mx-4 ">
            <a href="https://www.argentina.gob.ar/justicia" target="_blank"><img src="img/_Sellos-Ministerio-(2).png" class="logoMin mt-2 " alt="Logo ministerio" /></a>

            <img src="img/IGJ2024.png" class=" logoIgj" alt="Logo igj" />
            </div>

            <header class="d-flex w-100 text-white justify-content-end" style="background-color:#15153D; height:6.2rem;">


                <div>
                    <div class="mx-5 mt-2">
                    <Span>Tramite:</Span>
                    <h3 class="fw-bold ">921 - Presentación de Balances Y Asambleas</h3>
                    </div>

                    <Span Class="position-absolute mx-2" Style="right:0;"><a href="https://www.argentina.gob.ar/justicia" class="text-decoration-none text-white" target="_blank" style="cursor:pointer">Ayuda</a> | <a href="https://www.argentina.gob.ar/justicia" class="text-decoration-none text-white" target="_blank" style="cursor:pointer">Marco Legal</a></Span>
                </div>


            </header>
            @if (NroCorrelativo != null)
            {
                    <Div class="d-flex gap-3 justify-content-xl-center justify-content-md-start align-items-center w-100 p-1 rounded-0" style="background-color:dimgray; border-top: 2mm ridge rgba(237, 169, 63, .6);">
                                <Span Class="text-white fw-bolder" >@RazonSocial @TipoEntidad</Span>
                        <Span Class="text-white fw-bolder">-@NroCorrelativo-</Span>
                                <img src="icon/balance2.png" style="height:1.5rem; width:auto;" />
                        <Span Class="text-white fw-bolder">Cierre @FechaDeCierre?.ToString("yyyy") - </Span>
                        <Span Class="text-white fw-bolder">@FechaDeCierre?.ToString("dd/MM/yyyy")</Span>
                    <Span Class="text-white fw-bolder position-absolute mx-2" Style="right:0;" >Id: @IdBalance</Span>
                    </Div>
            }

        <RadzenStack class="flex-grow-1 rz-background-color-base-200">
            @Body
        </RadzenStack>

        <footer style="background-color:#121B3A;border-top: 2mm ridge rgba(237, 169, 63, .6);" class="w-100 gap-2 p-2 text-white d-flex justify-content-center mt-1 rounded-top-3">

            @* <img src="./img/logoFooter.png" class="position- mb-2 mx-2" style="width:300px; height:auto;left:0;bottom:0; " alt="Alternate Text" /> *@

            <Span>Av. Paseo Colon 285, CABA -</Span>
            <Span>Tel: 5300-4000 -</Span>
            <Span>Email: infoigj@jus.gov.ar</Span>

            <a href="https://www.argentina.gob.ar/justicia" target="_blank"><img src="img/modificado.png" class=" position-fixed mx-xxl-3 logoFooter mb-" style="bottom:0; right:0;" alt="Logo ministerio" /></a>
        </footer>


    </div>

</body>
</html>

@code {


    [Parameter] public static string? NroCorrelativo { get; set; }
    [Parameter] public static string? TipoEntidad { get; set; }
    [Parameter] public static string? RazonSocial { get; set; }
    [Parameter] public static DateTime? FechaDeCierre { get; set; }
    [Parameter] public static string? IdBalance { get; set; }
}
