@using System.Reflection;
@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Búsqueda de Entidad</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />


    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/css/bootstrap/background.css" rel="stylesheet">


    <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
    <link href="_content/Blazorise.Bootstrap/blazorise.bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
    <link href="~/css/bootstrap/background.css" rel="stylesheet">

</head>

<body>
    <div class="page">
        <main>
            <header class=" d-flex justify-content-between text-white px-5  rounded-bottom-3" style="background-color:#1b2a4a; height:120px">
                
                    <div class="col">
                        <img src="img/logo.png" class="img-fluid" style="height:11.8rem; width:11.8rem;" alt="Alternate Text" />
                    </div>


                    <div class="col d-flex justify-content-center p-2">
                        <img src="img/modificado.png" class="img-fluid" style="height:100px; width:100px;" alt="Alternate Text" />
                    </div>


                    <div class="col-md-4 mt-4 p-4">
                        <h4 class="d-flex justify-content-center">Presentación de Balances y Asamblea</h4>
                    </div>
                    
                    <div class=" col-md-4 d-flex justify-content-end ">


                    <RadzenCard class=" rz-border-radius-20" style="background-color:#15153D; max-height:120px">
                        
                        <RadzenRow RowGap="4">
                            <RadzenColumn >
                                <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light rz-display-flex  rz-mb-0">Correlativo</RadzenText>
                                <RadzenText TextStyle="TextStyle.Body2" class="rz-color-on-primary-light"><b>@NroCorrelativo</b></RadzenText>
                            </RadzenColumn>
                             <RadzenColumn >
                                <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light rz-display-flex  rz-mb-0">Fecha de Cierre</RadzenText>
                                <RadzenText TextStyle="TextStyle.Body2" class="rz-color-on-primary-light"><b>@FechaDeCierre?.ToString("dd/MM/yyyy")</b></RadzenText>
                             </RadzenColumn >
                        </RadzenRow>
                        <RadzenRow RowGap="4">
                              <RadzenColumn >
                                <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light rz-display-flex rz-mt-4 ">Denominación</RadzenText>
                                <RadzenText TextStyle="TextStyle.Body2" class="rz-color-on-primary-light"><b>@RazonSocial &nbsp @TipoEntidad</b></RadzenText>
                            </RadzenColumn>
                        </RadzenRow>
                    </RadzenCard>

                    </div>
               
            </header>
         
            <RadzenStack class="rz-background-color-base-200 p-4" >
                @Body
            </RadzenStack>


            <footer style="background-color:#121B3A;"  class="w-100  d-flex justify-content-center mt-1 p-4 rounded-top-3">
                <img src="./img/logoFooter.png" style="width:300px; height:auto;" alt="Alternate Text" />
            </footer>

           
        </main>
            
    </div>
</body>
</html>

@code{


    [Parameter] public static string? NroCorrelativo { get; set; }
    [Parameter] public  static string? TipoEntidad { get; set; }
    [Parameter] public  static string? RazonSocial { get; set; }
    [Parameter] public static DateTime? FechaDeCierre { get; set; }
}
