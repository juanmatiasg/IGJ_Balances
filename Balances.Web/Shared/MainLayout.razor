@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Búsqueda de Entidad</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />


    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/css/bootstrap/background.css" rel="stylesheet">


    <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
    <link href="_content/Blazorise.Bootstrap/blazorise.bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/material-base.css">
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>
    <link href="~/css/bootstrap/background.css" rel="stylesheet">

</head>

<body>
    <div class="page">
        <main>
            <header>

                <div class="container-fluid d-flex justify-content-center">
                    <a class="nav-link"><img src="img/logo_IGJ_5.jpeg" width="150" height="150" alt="Icono 1"></a>
                </div>


                @if (@Entidad != null)
                {
                    <RadzenCard Class="rz-my-12 rz-mx-auto" Style="max-width: 420px">
                        <RadzenStack Gap="0">
                            <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-2 rz-my-0">Entidad</RadzenText>
                            <RadzenText TextStyle="TextStyle.Body1"><b>@Entidad</b></RadzenText>
                            <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-4 rz-mb-0">Razón Social</RadzenText>
                            <RadzenText TextStyle="TextStyle.Body1"><b>@RazonSocial</b></RadzenText>
                        </RadzenStack>
                    </RadzenCard>
                }

            </header>
           
            <div>
                <RadzenProgressBar ProgressBarStyle="ProgressBarStyle.Info" Value="100" ShowValue="false" Style="width:100%;" />
            </div>

            <article class="content px-4 bg-light" style="background-size: cover; background-position: center;">
                @Body
            </article>
        </main>
    </div>
</body>
</html>


@code{
    [Parameter] public string? Entidad { get; set; }
    [Parameter] public string? RazonSocial { get; set; }
}