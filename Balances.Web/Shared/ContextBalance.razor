@using Balances.Web.Pages;



<RadzenCard Class="rz-my-12 rz-mx-auto" Style="max-width: 200px; ">
    <RadzenStack>
        <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-2 rz-my-0">Entidad</RadzenText>
        <RadzenText TextStyle="TextStyle.Body1"><b>@Entidad</b></RadzenText>
        <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-4 rz-mb-0">Razón Social</RadzenText>
        <RadzenText TextStyle="TextStyle.Body1"><b>@RazonSocial</b></RadzenText>
    </RadzenStack>

</RadzenCard>


@code {
    [Parameter] public string? Entidad { get; set; }
    [Parameter] public string? RazonSocial { get; set; }


    protected override Task OnInitializedAsync()
    {
        Entidad = getEntidad();
        RazonSocial = getRazonSocial();

        return base.OnInitializedAsync();
    }
    

    // Method to obtain Entidad value from Caratula
    private string getEntidad()
    {
        
            return Caratula.TipoEntidad ?? "";
        
    }

    // Method to obtain RazonSocial value from Caratula
    private string getRazonSocial()
    {
        
            return Caratula.RazonSocial ?? "";
       
    }

}
